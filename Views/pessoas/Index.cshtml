<!DOCTYPE html>
<html lang="en">

@model IEnumerable<WebApplication1.Models.pessoa>

@{ ViewBag.Title = "Registros"; }
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this template-->
<link href="css/sb-admin-2.min.css" rel="stylesheet">

<h2>MYCRUD</h2>
<hr />

<body class="bg-gradient-primary">
    <li class="nav-item">
        <a class="nav-link collapsed" href="" data-toggle="collapse" data-target="#collapsePages"
           aria-expanded="true" aria-controls="collapsePages">
            <i class="fas fa-fw fa-file-archive"></i>
            <span>@Html.ActionLink("Novo Cadastro!", "Create")</span>
        </a>
    </li>
    <hr />
    <hr />
    


    <div class="container">
        <div class="row justify-content-center">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Endereço)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereço)
        </td>
    </tr>
                    <td>
                        <li class="nav-item">
                            <a class="nav-link collapsed" href="" data-toggle="collapse" data-target="#collapsePages"
                               aria-expanded="true" aria-controls="collapsePages">
                                <i class="fas fa-fw fa-address-book"></i>
                                <span>@Html.ActionLink("Editar", "Edit", new { id = item.Codigo }) </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link collapsed" href="" data-toggle="collapse" data-target="#collapsePages"
                               aria-expanded="true" aria-controls="collapsePages">
                                <i class="fas fa-fw fa-pencil-ruler"></i>
                                <span>@Html.ActionLink("Detalhes", "Details", new { id = item.Codigo }) </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link collapsed" href="" data-toggle="collapse" data-target="#collapsePages"
                               aria-expanded="true" aria-controls="collapsePages">
                                <i class="fas fa-fw fa-trash"></i>
                                <span>@Html.ActionLink("Delete", "Delete", new { id = item.Codigo })</span>
                            </a>
                        </li>
                    </td>}
            </table>
        </div>

    </div>
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
</body>

</html>


